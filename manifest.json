{

  "manifest_version": 2,
  "name": "Distraction Tracker",
  "version": "1.0",

  "description": "Sets timers for work sessions and counts times distracted.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "distractiontracker@distractiontracker.com"
    }
  },

  "browser_action": {
    "default_icon": "icons/beasts-48.png",
    "default_title": "Distraction Tracker",
    "default_popup": "popup/DistractionTracker.html"
  }

}