{
  "manifest_version": 2,
  "name": "Distraction Tracker",
  "version": "1.0",
  "author": "Blu Mays, Martin Rosenberg, Badr Choubai, Bruce Ackley",
  "description": "Sets timers for work sessions and counts times distracted.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  },
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "Distraction Tracker",
    "default_popup": "popup/DistractionTracker.html"
  },
  "permissions": ["alarms", "notifications", "storage"],
  "commands": {
    "start-distraction-tracker": {
      "suggested_key": {
        "default": "Alt+Shift+1"
      },
      "description": "Start the timer."
    },
    "stop-distraction-tracker": {
      "suggested_key": {
        "default": "Alt+Shift+2"
      },
      "description": "Stop the timer."
    },
    "reset-distraction-tracker": {
      "suggested_key": {
        "default": "Alt+Shift+3"
      },
      "description": "Reset the timer."
    },
    "log-distraction-tracker": {
      "suggested_key": {
        "default": "Alt+Shift+4"
      },
      "description": "Log a distraction."
    }
  },
  "options_ui": {
    "page": "/options/options.html",
    "browser_style": false
  }
}